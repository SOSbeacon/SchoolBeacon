<?xml version="1.0" encoding="utf-8"?>
<ScrollView  
  xmlns:android="http://schemas.android.com/apk/res/android" 
  android:id="@+id/wrapscroll"
  android:background="@drawable/settings" android:layout_width="wrap_content" android:layout_height="fill_parent">
<RelativeLayout  
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:gravity="top"
  android:paddingLeft="20dip"
 >
   <LinearLayout  
   android:id ="@+id/recordsetting"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:orientation="vertical" 
   android:layout_marginTop="10dip"   
   >
	   	<TextView
	   	 android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginTop="15dip"
	   	 android:text="@string/lblRecordSetting"
	   	 android:textStyle="bold">
	   	</TextView>
	   	<LinearLayout
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
	     >
		 	<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:gravity="center_vertical"
		    > 
		       <TextView 
		        android:text="@string/lblCapture"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
	        </LinearLayout>     
	        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:gravity="right">         
		        <Spinner 
		        android:id="@+id/spinner_voice"
		        android:layout_width="150dip"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="true"
		        android:prompt="@string/image_record_prompt"
		        />
	     </LinearLayout>
	   </LinearLayout>  
   </LinearLayout>
   
   <LinearLayout  
   android:id ="@+id/alertsetting"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:layout_marginTop="10dip"   
   android:layout_below="@+id/recordsetting"
   android:orientation="horizontal"
   >
   	<LinearLayout
   	 android:layout_width="wrap_content"
     android:layout_height="fill_parent"
     android:gravity="center_vertical"
     > 
     	<TextView
	   	 android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	   	 android:text="@string/lblAlertincase"/>
	 </LinearLayout>  	 
	  <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="right"> 	
     	 <Spinner 
	        android:id="@+id/spinner_incase"
	        android:layout_width="196dip"
	        android:layout_height="wrap_content"
	        android:drawSelectorOnTop="true"
	        android:prompt="@string/sendto_prompt"/>	
	  </LinearLayout>          	
   	
  	</LinearLayout>
   	
   	<LinearLayout  
	   android:id ="@+id/panicsetting"
	   android:layout_width="fill_parent"
	   android:layout_height="wrap_content"
	   android:orientation="vertical" 
	   android:layout_marginTop="10dip"   
	   android:layout_below="@+id/alertsetting"
	   >
	   	
	   	<LinearLayout
	   	 android:layout_width="fill_parent"
	     android:layout_height="fill_parent"
	     android:orientation="vertical">
	         
	         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/lblPanicTelPhonenumber"
             android:id="@+id/linkPanicTelPhonenumber"
             android:selectAllOnFocus="true"
             android:textColor="@color/telPhonenumberLinkColor"
             android:layout_marginTop="5dip"
             android:layout_marginBottom="5dip"
             android:textStyle="bold"
             />
             
             <LinearLayout
		     android:layout_width="wrap_content"
		     android:layout_height="fill_parent"
		     android:gravity="center_vertical"
		     > 
			     <TextView
			   	 android:layout_width="144dip"
			     android:layout_height="wrap_content"
			     android:text="@string/lblPanicPhonenumber"
			     />
			     <EditText
			      android:id="@+id/txtpanicphone"
			      android:layout_width="140dip"
			      android:layout_height="wrap_content"
			      android:phoneNumber="true"
			      android:gravity="center"
			      android:singleLine="true"
			      />
		      </LinearLayout>
			      
		      <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="fill_parent"
                     android:gravity="center_vertical"
                     > 
			     <TextView
		             android:layout_width="228dip"
		             android:layout_height="wrap_content"
		             android:text="@string/lblSamaritanIncoming"/>
                 <ToggleButton
	                  android:id="@+id/btntogg_incom"
	                  android:layout_width="wrap_content"
	                  android:layout_height="wrap_content" 
	                  android:gravity="center">
                 </ToggleButton>
             </LinearLayout>
             
		       <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="fill_parent"
                     android:gravity="center_vertical"
                     > 
			     <TextView
		             android:layout_width="228dip"
		             android:layout_height="wrap_content"
		             android:text="@string/alert_setting_sound"/>
                 <ToggleButton
	                  android:id="@+id/btntogg_setting_sound"
	                  android:layout_width="wrap_content"
	                  android:layout_height="wrap_content" 
	                  android:gravity="center">
                 </ToggleButton>
             </LinearLayout>
	     </LinearLayout>
	</LinearLayout>
</RelativeLayout>
</ScrollView>
