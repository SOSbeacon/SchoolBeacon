<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:orientation="vertical"
  android:layout_height="fill_parent">
	<android.webkit.WebView android:id="@+id/webView" android:layout_above="@id/message" android:layout_width="fill_parent" android:layout_height="fill_parent" ></android.webkit.WebView>
    <TextView android:layout_alignParentBottom="true" android:visibility="gone" android:id="@+id/message" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center"></TextView>
</RelativeLayout>
