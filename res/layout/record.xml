<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" 
	android:background="@drawable/settings"
  >
    <SurfaceView android:id="@+id/preview"
		android:clickable="false"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_gravity="center"
		android:layout_above="@+id/bottomControl"
		>
    </SurfaceView>
    <LinearLayout android:id="@+id/previewCover"
		android:clickable="false"
		android:background="#000"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_gravity="center"
		android:layout_above="@+id/bottomControl"
		/>
    <RelativeLayout
        android:id="@+id/topControl"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#80000000"
        android:layout_alignParentTop="true"
        >
        <ProgressBar 
            android:id="@+id/progressBar"
            android:layout_alignParentLeft="true"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:max="3"
            android:layout_centerVertical="true" 
        />
        <TextView
            android:id="@+id/txt_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_centerVertical="true"
            android:textColor="#ff0000"
            android:layout_toRightOf="@id/progressBar"
           	>
        </TextView>
    </RelativeLayout>
	<RelativeLayout
	    android:id="@+id/bottomControl"
		android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_titilebar"
        android:layout_alignParentBottom="true"
        >
	    <TextView
	    	android:id="@+id/title_photo"
			android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="5dip"
            android:text="@string/txtPhoto"
            android:textStyle="bold"
         	android:layout_centerVertical="true" 
         	android:layout_alignParentLeft="true"/>
         <TextView
	    	android:id="@+id/txt_number_photo"
			android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="5dip"
        	android:layout_toRightOf="@+id/title_photo"
        	android:minWidth="30dip"
         	android:layout_centerVertical="true" 
         	/>
        <Button android:id="@+id/btn_capture"
			 android:layout_width="wrap_content"
             android:layout_height="wrap_content"
			 android:layout_centerInParent="true"
			 android:background="@drawable/custom_button_camera"
			 android:clickable="true"
			 /> 
		<TextView
            android:id="@+id/txt_camera_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30dip"
            android:layout_centerInParent="true"
            android:textColor="#ff0000"
            android:paddingTop="6dip"
            android:paddingLeft="22dip"
            android:text="0"
            />
		<TextView
	    	android:id="@+id/txt_seconds"
			android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginRight="3dip"
            android:layout_toLeftOf="@+id/btn_done"
         	android:layout_centerVertical="true" 
         	/>	 
        <Button android:id="@+id/btn_done"
			 android:layout_width="wrap_content"
             android:layout_height="wrap_content"
			 android:text="@string/btnDone"
			 android:layout_marginRight="5dip"
			 android:layout_alignParentRight="true"
			 android:layout_centerVertical="true"
			 style="@style/iBtn" 
			 />
    </RelativeLayout>	
</RelativeLayout>