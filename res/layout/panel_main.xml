<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:panel="http://schemas.android.com/apk/res/cnc.sosbeacon"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>		
    <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_gravity="left"	
	  android:gravity="right" 
	  android:orientation="vertical"
	  android:background="@drawable/main"
	>
		<TextView
		  android:layout_width="190dip"
		  android:layout_height="50dip"
		  android:layout_marginTop="60dip"
		  android:layout_marginRight="10dip"		 
		  android:gravity="right" 
		  android:textSize="12dip"
		  android:text="@string/title_copyright">
		</TextView>
		
		
	</LinearLayout>
    
    
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:layout_gravity="center_horizontal"     
    >
        <TextView
          android:layout_width="250dip"
          android:layout_height="50dip"
          android:layout_marginTop="130dip"   
          android:layout_marginBottom="20dip"
          android:textSize="20dip"
          android:textStyle="bold"
          android:text="@string/title_checkin_record">
        </TextView>
    </LinearLayout>
    <cnc.sosbeacon.view.TransparentPanel
        android:layout_width="250dip"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dip"
        android:layout_marginBottom="30dip"
        android:orientation="horizontal"
       
    >
        <cnc.sosbeacon.widget.Panel
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent" 
            android:id="@+id/panelCheckin" 
            android:layout_gravity="left"
            panel:handle="@+id/panelHandle"
            panel:content="@+id/panelContent"
            panel:position="left"
            panel:openedHandle="@drawable/sliderthumb"
            panel:closedHandle="@drawable/sliderthumb"
        >
            <Button
                android:id="@+id/panelHandle" 
                android:layout_width="65dip" 
                android:layout_height="fill_parent"
            />
            <TextView
                android:id="@+id/panelContent" 
                android:layout_width="185dip" 
                android:layout_height="fill_parent" 
                android:gravity="center"
                android:padding="4dip"
                android:text="start check-in..."
                android:textSize="16dip"              
                android:textStyle="bold"
               
            />
        </cnc.sosbeacon.widget.Panel>
        <TextView
                android:layout_width="150dip" 
                android:layout_height="50dip"
                android:paddingLeft="20dip"
                android:paddingTop="15dip"
                android:textSize="16dip"
                android:text="@string/title_slide_begin">
        </TextView>
    </cnc.sosbeacon.view.TransparentPanel>
    
    
    
    <LinearLayout
	  android:layout_width="wrap_content"
	  android:layout_height="fill_parent"
	  android:layout_gravity="center_horizontal"	 
	>
	    <TextView
		  android:layout_width="250dip"
		  android:layout_height="50dip"
		  android:layout_marginTop="220dip"	  
		  android:layout_marginBottom="20dip"
		  android:textSize="20dip"
		  android:textStyle="bold"
		  android:text="@string/title_send_alert">
		</TextView>
	</LinearLayout>
	<cnc.sosbeacon.view.TransparentPanel
	    android:layout_width="250dip"
	    android:layout_height="50dip"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="250dip"
	    android:layout_marginBottom="30dip"
	    android:orientation="horizontal"
	   
    >
    
		<cnc.sosbeacon.widget.Panel
		    android:layout_width="wrap_content" 
		    android:layout_height="fill_parent" 
		    android:id="@+id/panelRecord" 
		    android:layout_gravity="left"
		    panel:handle="@+id/panelHandle"
		    panel:content="@+id/panelContent"
		    panel:position="left"
		    panel:openedHandle="@drawable/sliderthumb"
		    panel:closedHandle="@drawable/sliderthumb"
		>
		  
			<Button
				android:id="@+id/panelHandle" 
			    android:layout_width="65dip" 
			    android:layout_height="fill_parent"
			/>
			<TextView
				android:id="@+id/panelContent" 
			    android:layout_width="185dip" 
			    android:layout_height="fill_parent" 
			    android:gravity="center"
			    android:padding="4dip"
			    android:text="recording..."
			    android:textSize="16dip"			  
			    android:textStyle="bold"
			   
			/>
		</cnc.sosbeacon.widget.Panel>
		<TextView
				android:layout_width="150dip" 
			    android:layout_height="50dip"
			    android:paddingLeft="20dip"
			    android:paddingTop="15dip"
			    android:textSize="16dip"
			    android:text="@string/title_slide_ative">
		</TextView>
	</cnc.sosbeacon.view.TransparentPanel>
	
	<LinearLayout
	  android:layout_width="wrap_content"
	  android:layout_height="fill_parent"
	  android:layout_gravity="center_horizontal"	 
	>
	<TextView
	  android:layout_width="250dip"
	  android:layout_height="50dip"
	  android:layout_marginTop="310dip"	  
	  android:layout_marginBottom="10dip"
	  android:textSize="20dip"
	  android:textStyle="bold"
	  android:text="@string/title_call_emergency">	
	</TextView>
	</LinearLayout>
	
	<cnc.sosbeacon.view.TransparentPanel
	    android:layout_width="250dip"
	    android:layout_height="50dip"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="345dip"
	    android:layout_marginBottom="30dip"
	    android:orientation="horizontal"
	   
    >
		
		<cnc.sosbeacon.widget.Panel
		    android:layout_width="wrap_content" 
		    android:layout_height="fill_parent" 
		    android:id="@+id/panelCall" 
		    android:layout_gravity="left"
		    panel:handle="@+id/panelHandleCall"
		    panel:content="@+id/panelContentCall"
		    panel:position="left"
		    panel:openedHandle="@drawable/sliderthumb"
		    panel:closedHandle="@drawable/sliderthumb"
		>
			<Button
				android:id="@+id/panelHandleCall" 
			    android:layout_width="65dip" 
			    android:layout_height="fill_parent"
			/>
			<TextView
				android:id="@+id/panelContentCall" 
			    android:layout_width="185dip" 
			    android:layout_height="fill_parent" 
			    android:gravity="center"
			    android:padding="4dip"
			    android:text="calling panic..."
			    android:textSize="16dip"			  
			    android:textStyle="bold"
			   
			/>
		</cnc.sosbeacon.widget.Panel>
		<TextView
				android:layout_width="150dip" 
			    android:layout_height="50dip"
			    android:paddingLeft="20dip"
			    android:paddingTop="15dip"
			    android:textSize="16dip"
			    android:text="@string/title_slide_start">
		</TextView>
		
	</cnc.sosbeacon.view.TransparentPanel>
	
	
</FrameLayout>
