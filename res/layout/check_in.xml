	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		 >
		<Button android:id="@+id/check_in_submit" android:text="@string/check_in_now"
            android:gravity="center" android:textSize="18dip" android:textStyle="normal"
            style="@style/btGreen" android:layout_height="70dip" android:layout_width="150dip"
            />
		<Button android:id="@+id/check_in_cancel" android:text="@string/btnCancel"
			style="@style/btBlack"
            android:layout_height="70dip" android:layout_width="150dip"
            android:textSize="18dip" android:textStyle="normal"
			/>	
	</LinearLayout>
	
	
