<?xml version="1.0" encoding="utf-8"?>
<cnc.sosbeacon.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res/cnc.sosbeacon"
	android:background="@drawable/settings"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" 
	android:id="@+id/svCheckIn"
	>
	<LinearLayout android:orientation="vertical"
    android:paddingTop="30dip" android:layout_gravity="center"
    android:paddingLeft="10dip" android:paddingRight="10dip"
    android:layout_width="wrap_content" android:layout_height="fill_parent"
    >
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:paddingBottom="10dip"
		>
		<TextView android:id="@+id/check_in_label" 
			android:text="@string/lblCheckingIn" 
			android:textSize="28dip" 
			android:layout_width="fill_parent"
			android:textStyle="bold" 
			android:layout_height="wrap_content"></TextView>
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:paddingBottom="10dip" android:gravity="center_vertical"
		>
		<TextView android:text="@string/check_in_to_label"
			android:layout_height="wrap_content" android:textSize="18dip"
			android:gravity="right" android:layout_width="80dip" />
		<EditText android:id="@+id/check_in_to" 
		    android:layout_height="wrap_content"
			android:editable="false"
			android:singleLine="true"
			android:text="@string/check_in_to_default"			
			android:layout_width="220dip"
			android:background="@android:drawable/btn_dropdown"
			android:focusableInTouchMode="false"
			/>
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:paddingBottom="10dip" android:gravity="center_vertical"
		>
		<TextView android:text="@string/check_in_message_label"
		    android:layout_width="80dip"
			android:layout_height="wrap_content" android:textSize="18dip"
			android:gravity="right"
			/>
		<EditText
		    android:text="@string/checkInOk" 
		    android:id="@+id/etSelectMessage" 
		    android:editable="false"
		    android:singleLine="true"
		    android:background="@android:drawable/btn_dropdown"	    
		    android:layout_height="wrap_content" android:layout_width="220dip"
            android:focusableInTouchMode="false"		   
		    />	 
			
    </LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
	     android:paddingBottom="10dip" android:id="@+id/messageLayout"
		android:layout_height="wrap_content" android:orientation="vertical">
		<EditText android:id="@+id/check_in_message" android:lines="3" 
    		android:layout_height="wrap_content" 
            android:layout_width="300dip"
            android:gravity="top" android:maxLength="75"
		/>
		<TextView android:id="@+id/tvSmsLimit" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="14dip" android:layout_gravity="right"
            />
	</LinearLayout>

