<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:panel="http://schemas.android.com/apk/res/cnc.sosbeacon"
    android:layout_width="fill_parent" android:layout_height="fill_parent">		
    <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_gravity="left"	
	  android:gravity="right" 
	  android:orientation="vertical"
	  android:background="@drawable/main"
	>
		<TextView
		  android:layout_width="190dip"
		  android:layout_height="50dip"
		  android:layout_marginTop="80dip"
		  android:layout_marginRight="10dip"		 
		  android:gravity="right" 
		  android:textSize="12dip"
		  android:text="@string/title_copyright">
		</TextView>
	</LinearLayout>
    
    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:paddingLeft="20dip"
      android:paddingRight="20dip"
      android:layout_gravity="center"
      android:gravity="center"  
      android:orientation="vertical"
    >
       	<ImageButton
       		android:id="@+id/btOkEasy" android:src="@drawable/bt_im_ok"
       		android:layout_width="wrap_content" android:layout_height="wrap_content"
        	android:layout_marginTop="120dip"  android:layout_marginBottom="25dip"
        	android:scaleType="fitXY" android:adjustViewBounds="true"
        	android:background="@android:color/transparent"
        />
        <ImageButton
       		android:id="@+id/btCheckIn" android:src="@drawable/bt_send_broadcast"
       		android:layout_width="wrap_content" android:layout_height="wrap_content"
        	android:layout_marginBottom="25dip"
        	android:scaleType="fitXY" android:adjustViewBounds="true"
        	android:background="@android:color/transparent"
        />
        <ImageButton
       		android:id="@+id/btCancel" android:src="@drawable/bt_cancel"
       		android:layout_width="wrap_content" android:layout_height="wrap_content"
        	android:layout_marginBottom="20dip"
        	android:scaleType="fitXY" android:adjustViewBounds="true"
        	android:background="@android:color/transparent"
        />
        
	</LinearLayout>
</FrameLayout>
