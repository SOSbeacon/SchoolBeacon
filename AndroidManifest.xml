<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="cnc.sosbeacon"
      android:versionName="@string/app_version" android:versionCode="16">
    <application  android:icon="@drawable/icon" android:label="@string/app_name"  android:debuggable="true">
	    <!-- uses-library android:name="com.google.android.maps" android:required="false"/ -->
	    <activity android:name=".SplashScreenActivity"  android:theme="@style/iTitleTheme" android:screenOrientation="portrait">
	        <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
	    </activity>
	    <activity android:name=".OffLineModeActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar"/>    
	    <activity  android:name=".TermActivity" android:screenOrientation="portrait"
	              android:label="@string/app_name" android:theme="@style/iTitleTheme" android:noHistory="true">
	    </activity>   
	    <provider
	            android:name=".provider.SosBeaconCheckinMessageProvider"
	            android:authorities="cnc.sosbeacon.provider" />        
		<activity android:name=".LoginActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:windowSoftInputMode="stateAlwaysHidden" android:configChanges="keyboardHidden|orientation"></activity>
	   	<activity android:name=".RecordActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
	   	   
	   	</activity>
		<activity android:name=".SettingActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:windowSoftInputMode="stateAlwaysHidden" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".ContactCategory" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".ContactAdd" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:windowSoftInputMode="stateAlwaysHidden" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".ContactList" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".SosBeaconActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
	    </activity>
	    <activity android:name=".ReviewActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".CheckInActivity" android:windowSoftInputMode="stateHidden" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".TellUsActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:launchMode="singleTop" android:name=".ImportContactsActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
	    	<intent-filter>
	    		<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="sosbeacon" android:host="oauth" />
				<data android:scheme="fbconnect" android:host="success" />
	     	</intent-filter>
	    </activity>
	    
	    <activity android:name=".OauthRequestActivity" android:theme="@style/iTitleTheme"></activity>
	    <activity android:name=".CheckInOkActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".NeedHelpActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	   <activity android:name=".ManagerActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".AccountActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".AlertSettingActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".StorageSettingActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".GoodSamaritanSettingActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
	    <activity android:name=".AboutActivity" android:theme="@style/iTitleTheme" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"></activity>
    </application>
     
    <uses-sdk android:minSdkVersion="7"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <!-- <uses-permission android:name="android.permission.ACCESS_SURFACE_FLINGER"/ -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>   
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
	<uses-permission android:name="android.permission.SEND_SMS" />
    <supports-screens android:anyDensity="true"/>
    <supports-screens android:smallScreens="true"/>
    <supports-screens android:normalScreens="true"/>
    <supports-screens android:largeScreens="true"/>
</manifest> 